{% extends 'base.html.twig' %}

{% block title %}Bidon{% endblock %}

{% block body %}
    <h1>Bidon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bidon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bidon.name }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ bidon.volume }}</td>
            </tr>
